{
  "name": "cloudfs",
  "version": "0.0.1",
  "description": "FS synchronizes with cloud drive.",
  "author": "DavidJones <qowera@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "commit": "git-cz",
    "ci:pages": "shx rm -rf ./gh-pages && mkdir -p ./gh-pages",
    "ci:coverage": "npm run compile && npm run test",
    "ci:build": "npm run compile",
    "preinstall": "node ./public/scripts/preinstall.mjs",
    "clear": "rimraf --glob ./@*/*/{libs,build,*.tsbuildinfo,tsconfig.build.json} tsconfig.build.json",
    "format": "prettier --config .prettierrc.js --write \"**/*.{js,jsx,ts,tsx,d.ts,vue,md,json,yml,yaml}\"",
    "lint": "eslint --fix .",
    "compile": "tsc --build ./tsconfig.build.json"
  },
  "workspaces": [
    "packages/*",
    "packages/*/example"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@types/crypto-js": "^4.2.2",
    "@types/gapi": "^0.0.47",
    "@types/gapi.client.drive": "^3.0.15",
    "@types/google.accounts": "^0.0.14",
    "@types/micromatch": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "ts-lib": "^0.0.5",
    "typescript": "^5.3.3"
  }
}
